        <javadoc access="public" author="true" classpath="${sdk.dir}/platforms/android-14/android.jar" destdir="doc" doctitle="Actions-Micro Remote Control SDK" nodeprecated="true" nodeprecatedlist="true" noindex="false" nonavbar="false" notree="false" source="1.6" sourcefiles="src/com/actionsmicro/falcon/Falcon.java" linkoffline="http://d.android.com/reference ${sdk.dir}/docs/reference" link="http://docs.oracle.com/javase/6/docs/api/"
